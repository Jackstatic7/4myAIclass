<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Whispers of the Emberwood</title>
  <style>
    body {
      background-color: #1e1e2f;
      color: #f2f2f2;
      font-family: 'Georgia', serif;
      padding: 20px;
    }
    #game {
      max-width: 700px;
      margin: auto;
      background: #2e2e3f;
      padding: 20px;
      border-radius: 10px;
    }
    button {
      margin: 5px;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
    }
    .attack-btn { background-color: #e07a5f; color: white; }
    .defend-btn { background-color: #3d405b; color: white; }
    .flee-btn { background-color: #81b29a; color: white; }
    .next-btn { background-color: #f2cc8f; color: black; }
    #log {
      white-space: pre-wrap;
      margin-top: 20px;
      background: #1a1a2a;
      padding: 10px;
      border-radius: 8px;
      height: 300px;
      overflow-y: auto;
    }
  </style>
</head>
<body>
  <div id="game">
    <h1>ğŸ¦Š Whispers of the Emberwood</h1>
    <div id="controls"></div>
    <div id="log"></div>
  </div>

  <script>
    const player = {
      name: 'Hero',
      hp: 30,
      maxHp: 30,
      attack: [4, 10]
    };

    const enemies = {
      "Emberfox Stalker": { hp: 12, attack: [3, 6] },
      "Emberfox Illusionist": { hp: 16, attack: [2, 8] },
      "Emberfang Sentinel": { hp: 24, attack: [5, 10] },
      "Vulkris": { hp: 40, attack: [6, 12], phase2: false }
    };

    let logDiv = document.getElementById("log");
    let controlsDiv = document.getElementById("controls");
    let currentEnemy = null;
    let currentLevel = 0;

    function log(text) {
      logDiv.innerText += text + '\n';
      logDiv.scrollTop = logDiv.scrollHeight;
    }

    function clearControls() {
      controlsDiv.innerHTML = '';
    }

    function createButton(text, className, onClick) {
      const btn = document.createElement("button");
      btn.textContent = text;
      btn.className = className;
      btn.onclick = onClick;
      controlsDiv.appendChild(btn);
    }

    function nextLevel() {
      clearControls();
      currentLevel++;
      if (currentLevel === 1) {
        log("ğŸŒ² Level 1: The Forest Edge\nTwo Emberfox Stalkers emerge from the mist...");
        fightEnemy("Emberfox Stalker", () => {
          fightEnemy("Emberfox Stalker", () => {
            log("The foxes left behind a body with glowing runes...");
            createButton("Continue", "next-btn", nextLevel);
          });
        });
      } else if (currentLevel === 2) {
        log("\nğŸ”¥ Level 2: Heart of the Emberwood\nIllusions twist around you as the flames burn brighter.");
        fightEnemy("Emberfox Illusionist", () => {
          fightEnemy("Emberfox Illusionist", () => {
            fightEnemy("Emberfang Sentinel", () => {
              log("ğŸ¦Š The Sentinel whispers: 'Save us... or burn with us...'");
              createButton("Continue", "next-btn", nextLevel);
            });
          });
        });
      } else if (currentLevel === 3) {
        log("\nğŸ° Level 3: The Ruined Grove\nVulkris, the Flame-Heart Fox, awaits you.");
        fightEnemy("Vulkris", () => {
          log("ğŸ† You have defeated Vulkris. The forest breathes again. Victory is yours!");
          clearControls();
        });
      }
    }

    function fightEnemy(name, onVictory) {
      currentEnemy = { ...enemies[name] };
      currentEnemy.name = name;

      log(`\nâš”ï¸ A wild ${name} appears!`);

      updateBattleControls(onVictory);
    }

    function updateBattleControls(onVictory) {
      clearControls();

      createButton("Attack", "attack-btn", () => {
        const dmg = rand(...player.attack);
        currentEnemy.hp -= dmg;
        log(`ğŸ—¡ï¸ You hit ${currentEnemy.name} for ${dmg} damage.`);

        if (currentEnemy.name === "Vulkris" && currentEnemy.hp <= 20 && !currentEnemy.phase2) {
          currentEnemy.attack = [8, 14];
          currentEnemy.phase2 = true;
          log("ğŸ”¥ Vulkris transforms into a spectral flame fox!");
        }

        if (currentEnemy.hp <= 0) {
          log(`âœ… ${currentEnemy.name} is defeated.`);
          onVictory();
          return;
        }

        enemyTurn(onVictory);
      });

      createButton("Defend", "defend-btn", () => {
        const dmg = Math.floor(rand(...currentEnemy.attack) / 2);
        player.hp -= dmg;
        log(`ğŸ›¡ï¸ You brace. ${currentEnemy.name} hits you for ${dmg} reduced damage.`);

        checkPlayerDefeat(onVictory);
      });

      if (currentEnemy.name !== "Vulkris") {
        createButton("Flee", "flee-btn", () => {
          log(`ğŸƒ You flee from the ${currentEnemy.name}.`);
          onVictory();
        });
      }
    }

    function enemyTurn(onVictory) {
      const dmg = rand(...currentEnemy.attack);
      player.hp -= dmg;
      log(`ğŸ”¥ ${currentEnemy.name} hits you for ${dmg} damage.`);
      checkPlayerDefeat(onVictory);
    }

    function checkPlayerDefeat(onVictory) {
      if (player.hp <= 0) {
        log("ğŸ’€ You have fallen in battle. The forest is lost...");
        clearControls();
      } else {
        log(`â¤ï¸ HP: ${player.hp}/${player.maxHp}`);
        updateBattleControls(onVictory);
      }
    }

    function rand(min, max) {
      return Math.floor(Math.random() * (max - min + 1)) + min;
    }

    // Start game
    function startGame() {
      log("ğŸ® Welcome to Whispers of the Emberwood!");
      player.name = prompt("Enter your hero's name:") || "Hero";
      log(`Greetings, ${player.name}. Your journey begins...\n`);
      createButton("Begin", "next-btn", nextLevel);
    }

    startGame();
  </script>
</body>
</html>

